{% extends 'templateForm.html.twig' %}

{% block title %}Tabela Zawodnik{% endblock %}

{% block header %}
    <h2>Dodawanie zawodnika</h2>
{% endblock %}

{% block form %}

    <form id="signupForm" action="{{ url }}zawodnik/insert" method="POST">

        <div class="form-group">
          <label for="imie">Imie</label>
          <input type="text" class="form-control" id="imie" name="imie" maxlength="50">
        </div>
        <div class="form-group">
          <label for="nazwisko">Nazwisko</label>
          <input type="text" class="form-control" id="nazwisko" name="nazwisko" maxlength="50">
        </div>
        <div class="form-group">
          <label for="data_urodzenia">Data urodzenia</label>
          <input type="text" class="form-control" id="data_urodzenia" name="data_urodzenia" maxlength="10" placeholder="yyyy-mm-dd">
        </div>
        <div class="form-group">
          <label for="wzrost">Wzrost (cm)</label>
          <input type="text" class="form-control" id="wzrost" name="wzrost" maxlength="3">
        </div>
        <div class="form-group">
          <label for="narodowosc">Narodowość</label>
          <input type="text" class="form-control" id="narodowosc" name="narodowosc" >
        </div>
        <div class="form-group">
          <label for="do_kiedy_kontrakt">Kontrakt do</label>
          <input type="text" class="form-control" id="do_kiedy_kontrakt" name="do_kiedy_kontrakt" maxlength="10" placeholder="yyyy-mm-dd">
        </div>
        <div class="form-group">
          <label for="id_druzyna">Wybierz drużynę</label>
            <select name="id_druzyna" class="form-control">
                {% if id_druzyna is defined %}
                    <option value={{druzyny.id_druzyna}} selected>"{{druzyny.nazwa}}"</option>
                {% else %}

                    <option value="">--Wybierz drużynę--</option>

                    {% for druzyna in druzyny %}
                        <option value={{druzyna.id_druzyna}}>"{{druzyna.nazwa}}"</option>
                    {%  endfor %}

                {% endif %}
            </select>
        </div>
        <div class="form-group">
          <label for="id_pozycja">Wybierz pozycję</label>
            <select name="id_pozycja" class="form-control">
                <option value="">--Wybierz pozycję--</option>
                {% for pozycja in pozycje %}
                  <option value={{pozycja.id_pozycja}}>"{{pozycja.nazwa}}"</option>
                {%  endfor %}
            </select>
        </div>
        <input type="hidden" id="prevUrl" name="prevUrl" value="{{ prevUrl }}" />
        <br/>
      <button type="submit" class="btn btn-info">Dodaj</button>

</form>

{% endblock %}
