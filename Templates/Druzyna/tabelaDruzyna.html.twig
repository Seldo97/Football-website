{% extends 'templateTable.html.twig' %}

{% block title %}Tabela Druzyna{% endblock %}
{% block header %}
    <h2>Drużyny</h2>
{% endblock %}


    {% block table %}
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Drużyna</th>
                <th scope="col">Liga</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

        {% for druzyna in druzyny %}
        <tr>
          <td>{{ druzyna.id_druzyna }}</td>
          <td><img src="{{ url }}{{ druzyna.logo }}" width="33" height="40" />&nbsp&nbsp&nbsp {{ druzyna.nazwa }}</td>
          <td>{{ druzyna.liga }}</td>

          <td class="text-right">
               <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                   <a class="btn btn-primary" href="{{url}}druzyna/sklad/{{druzyna.id_druzyna}}" role="button">skład</a>
                   {% if sesja.id_uprawnienia == 1 %}
                        <button class="btn btn-success edit_data" url="{{url}}druzyna/formularzUpdateModal/{{druzyna.id_druzyna}}" role="button">&#8651;</button>
                        <a class="btn btn-danger" href="{{url}}druzyna/usun/{{druzyna.id_druzyna}}" role="button">&#9850;</a>
                   {% endif %}
               </div>
          </td>
        </tr>
        {%  endfor %}

        </tbody>

    {% endblock %}

    {% block dodajButton %}
        {% if sesja.id_uprawnienia == 1 %}
            <a class="btn btn-info" href="{{url}}druzyna/formularzDodaj" role="button">Dodaj</a>
        {% endif %}
    {% endblock %}
