{% extends 'templateForm.html.twig' %}

{% block title %}Logowanie{% endblock %}

{% block header %}
    <h2>Logowanie</h2>
{% endblock %}

{% block form %}

    <form id="signupForm" action="{{ url }}uzytkownik/zaloguj" method="POST">

      <div class="form-group">
        <label for="login">Login:</label>
        <input type="text" class="form-control" id="login" name="login" >
      </div>
      <div class="form-group">
        <label for="haslo">Has≈Ço:</label>
        <input type="password" class="form-control" id="haslo" name="haslo" >
      </div>
      <div class="form-group mt-5">
        <button type="submit" class="btn btn-info">Zaloguj</button>
        <!-- <button type="button" class="btn btn-secondary">Zarejestruj</button> -->
      </div>
    </form>

{% endblock %}
